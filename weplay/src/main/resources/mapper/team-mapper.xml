<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="teamMapper">
	
	<select id="countTeams" resultType="_int">
		SELECT
		       COUNT(*)
 		  FROM
		       TEAM
		 WHERE
		       STATUS = 'Y'
	</select>
 	
